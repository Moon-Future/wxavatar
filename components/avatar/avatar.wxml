<view class="avatar-container" style="overflow:{{controlShow ? 'initial' : 'hidden'}}">
	<image
		id="avatarImage"
	 class="userinfo-avatar"
	 src="{{userInfo.avatarUrl || avatarDefault}}"
	 bindload="avatarOnLoad"
	 mode="widthFix"
	/>
	<view class="avatar-move" wx:for="{{maskList}}" wx:for-item="maskInfo" wx:key="index" style="scale:{{maskInfo.scale}};rotate:{{maskInfo.angle}}deg;top:{{maskInfo.top}}px;left:{{maskInfo.left}}px;z-index:{{maskInfo.zIndex}}" catchtap="maskClick">
		<image
		 class="maskImage avatar-mask {{maskInfo.controlShow ? 'image-border-line' : ''}}"
		 style="opacity:{{maskInfo.opacity}};transform:rotateY({{maskInfo.turnFlag ? 180 : 0}}deg)"
		 src="{{maskInfo.src}}"
		 mode="widthFix"
		 bindload="imgOnLoad"
		 data-type="drag"
		 data-index="{{index}}"
		 bindtouchstart="touchstart"
		 bindtouchmove="touchmove"
		/>

		<image
		 id="maskImageHide-{{maskInfo.id}}"
		 class="avatar-mask-hide"
		 style="rotate:{{maskInfo.angleHide}}deg"
		 src="{{maskInfo.src}}"
		 mode="widthFix"
		/>

		<image
		 class="icon-move icon-move-rightdown"
		 src="/static/images/scale.png"
		 mode="widthFix"
		 lazy-load="false"
		 data-type="scale"
		 data-index="{{index}}"
		 bindtouchstart="touchstart"
		 bindtouchmove="touchmove"
		 hidden="{{!maskInfo.controlShow}}"
		/>
		<image
		 class="icon-turn"
		 src="/static/images/turn.png"
		 mode="widthFix"
		 lazy-load="false"
		 data-type="turn"
		 data-index="{{index}}"
		 bindtap="turnMask"
		 hidden="{{!maskInfo.controlShow}}"
		/>
		<image
		 class="icon-delete"
		 src="/static/images/delete.png"
		 mode="widthFix"
		 lazy-load="false"
		 data-type="delete"
		 data-index="{{index}}"
		 bindtap="deleteMask"
		 hidden="{{!maskInfo.controlShow}}"
		/>
	</view>
</view>

<drawImage id="imageCanvas" />
