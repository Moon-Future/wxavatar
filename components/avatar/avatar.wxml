<view class="avatar-container" style="overflow:{{controlShow ? 'initial' : 'hidden'}}">
	<image
	 bindtap="bindViewTap"
	 class="userinfo-avatar"
	 src="{{saveImg || userInfo.avatarUrl || '/static/images/avatar-default-1.png'}}"
	 mode="widthFix"
	/>
	<view class="avatar-move" wx:if="{{maskInfo.src}}" style="transform:rotate({{maskInfo.angle}}deg);top:{{maskInfo.top}}px;left:{{maskInfo.left}}px">
		<image
		 id="maskImage"
		 bindtap="bindViewTap"
		 class="avatar-mask {{controlShow ? 'image-border-line' : ''}}"
		 style="scale:{{maskInfo.scale}};opacity:{{maskInfo.opacity}}"
		 src="{{maskInfo.src}}"
		 mode="widthFix"
		 bindload="imgOnLoad"
		 data-type="drag"
		 bindtouchstart="touchstart"
		 bindtouchmove="touchmove"
		 bindtouchend="touchend"
		/>
		<image
		 class="icon-move icon-move-rightdown"
		 src="/static/images/scale.png"
		 mode="widthFix"
		 lazy-load="false"
		 data-type="scale"
		 bindtouchstart="touchstart"
		 bindtouchmove="touchmove"
		 bindtouchend="touchend"
		 hidden="{{!controlShow}}"
		/>
		<image
		 class="icon-rotate"
		 src="/static/images/rotate.png"
		 mode="widthFix"
		 lazy-load="false"
		 data-type="rotate"
		 bindtouchstart="touchstart"
		 bindtouchmove="touchmove"
		 bindtouchend="touchend"
		 hidden="{{!controlShow}}"
		/>
		<view class="icon-rotate-line" hidden="{{!controlShow}}" />
	</view>
</view>

<drawImage id="imageCanvas" />
